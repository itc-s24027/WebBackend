extends ../layout

block content
    p= content
    div(class=['mt-6', 'max-w-md', 'border-t', 'border-gray-300',
        'dark:border-white/10']
    )
        dl(class=['divide-y', 'divide-gray-300', 'dark:divide-white/10'])
            +fieldItem('ID', mydata.id)
            +fieldItem('NAME', mydata.name)
            +fieldItem('MAIL', mydata.mail)
            +fieldItem('AGE', mydata.age)

mixin fieldItem(labelText, value)
    div(class=['px-4', 'py-6', 'sm:grid', 'sm:grid-cols-3', 'sm:gap-4',
        'sm:px-0']
    )
        dt(class=['text-sm/6', 'font-medium', 'text-gray-900',
            'dark:text-gray-100']
        )= labelText
        dd(class=['mt-1', 'text-sm/6', 'text-gray-700', 'sm:col-span-2',
            'sm:mt-0', 'dark:text-gray-400']
        )=value