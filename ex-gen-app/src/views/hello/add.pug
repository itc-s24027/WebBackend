extends  ../layout

block content
    p= content
    form(method='post' action='/hello/add' class=['max-w-md', 'mt-4'])
        +formGroup('text', 'name', 'NAME')
        +formGroup('email', 'mail', 'MAIL')
        +formGroup('number', 'age', 'AGE')

        button(
            type='submit'
            class=['text-white', 'bg-blue-700', 'hover:bg-blue-800',
                'focus:ring-4', 'focus:outline-none', 'focus:ring-blue-300',
                'font-medium', 'rounded-lg', 'text-sm', 'w-full', 'sm:w-auto',
                'px-5', 'py-2.5', 'text-center', 'dark:bg-blue-600',
                'dark:hover:bg-blue-700', 'dark:focus:ring-blue-800']
        ) 作成


mixin formGroup(inputType, inputName, labelText, initialValue, error)
    -
        const [labelClass, inputClass] = error ? [
            {class: [
                'text-red-700', 'dark:text-red-500'
            ]},
            {class:[
                'bg-red-50', 'border-red-500', 'text-red-900', 'focus:ring-red-500',
                'dark:bg-gray-700', 'focus:border-red-500', 'dark:text-red-500',
                'dark:placeholder-red-500', 'dark:border-red-500'
            ]}
        ] : [
            {class:['text-gray-900', 'dark:text-white']},
            {class:['bg-gray-50', 'border-gray-300', 'text-gray-900',
                'focus:ring-blue-500', 'focus:border-blue-500', 'dark:bg-gray-700',
                'dark:border-gray-600', 'dark:text-white', 'dark:focus:ring-blue-500', 'dark:focus:border-blue-500'
            ]}
        ]
    .mb-5
        label(for=inputName
            class=['block', 'mb-2', 'text-sm', 'font-medium']
        )&attributes(labelClass)= labelText
        input(type=inputType id=inputName name=inputName autocomplete="off"
            class=['border', 'text-sm', 'rounded-lg',
                 'block', 'w-full', 'p-2.5', 'focus-visible:outline-none']
            value=initialValue
        )&attributes(inputClass)